common common
  default-extensions:

common lib
  default-language: Haskell2010
  ghc-options:      -Wall -Wunused-packages -Wredundant-constraints

common test
  default-language: Haskell2010
  ghc-options:      -Wall -Wunused-packages -Wredundant-constraints

common bench
  default-language: Haskell2010
  ghc-options:      -Wall -Wunused-packages -Wredundant-constraints

common exec
  default-language: Haskell2010
  ghc-options:
    -Wall -Wunused-packages -Wredundant-constraints -threaded -rtsopts
    -with-rtsopts=-N

source-repository head
  type:     git
  location: https://github.com/DougBurke/hvega

library
  hs-source-dirs:   src
  exposed-modules:
    Graphics.Vega.Tutorials.VegaLite
    Graphics.Vega.VegaLite

  other-modules:
    Graphics.Vega.VegaLite.Configuration
    Graphics.Vega.VegaLite.Core
    Graphics.Vega.VegaLite.Data
    Graphics.Vega.VegaLite.Foundation
    Graphics.Vega.VegaLite.Geometry
    Graphics.Vega.VegaLite.Input
    Graphics.Vega.VegaLite.Legend
    Graphics.Vega.VegaLite.Mark
    Graphics.Vega.VegaLite.Output
    Graphics.Vega.VegaLite.Scale
    Graphics.Vega.VegaLite.Selection
    Graphics.Vega.VegaLite.Specification
    Graphics.Vega.VegaLite.Time
    Graphics.Vega.VegaLite.Transform

  build-depends:
    , aeson                 >=0.11 && <2.2
    , base                  >=4.9  && <5
    , text                  >=1.2  && <2.1
    , unordered-containers  >=0.2  && <0.3

  default-language: Haskell2010
  ghc-options:      -Wall

test-suite test
  import:         common, test
  type:           exitcode-stdio-1.0
  hs-source-dirs: tests/
  main-is:        Test.hs
  other-modules:
    AxisTests
    ColorTests
    CompositeTests
    ConditionalTests
    ConfigTests
    DataTests
    EncodingTests
    FillStrokeTests
    FilterTests
    Gallery.Advanced
