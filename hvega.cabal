    ImageTests
    InteractionTests
    LegendTests
    MarkTests
    NullTests
    PositionTests
    ProjectionTests
    ScaleTests
    ShapeTests
    SortTests
    TextFormatTests
    TimeTests
    TooltipTests
    TrailTests
    TransformTests
    ViewCompositionTests
    WindowTransformTests

  build-depends:
    , aeson
    , aeson-pretty
    , base          >=4 && <5
    , bytestring
    , containers
    , filepath
    , hvega
    , tasty
    , tasty-golden
    , text
